{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "standard"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "comma-dangle": ["error", "always-multiline"],
    "operator-linebreak": ["error", "before"],
    "space-before-function-paren": [
      "error",
      { "anonymous": "always", "named": "always", "asyncArrow": "always" }
    ],
    "handle-callback-err": "off",
    "camelcase": "off",
    "no-use-before-define": "off"
  }
}
